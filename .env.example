OBSIDIAN_VAULT=/path/to/vault          # Absolute path to your Obsidian vault (required)
OLLAMA_URL=http://localhost:11434      # Base URL for your local Ollama instance
EMBED_MODEL=nomic-embed-text           # Model name used for embeddings
CHAT_MODEL=llama3                      # Model name used for generation (summaries/tags)
DB_PATH=./vault_index.sqlite           # SQLite file path for the vector store
EMBED_BATCH=32                         # How many chunks to embed per batch
CHUNK_MAX_CHARS=1800                   # Max characters per chunk when indexing
TOP_K=8                                # Retrieval top-k before deduplication
RETRIEVAL_MAX_CHUNKS_PER_NOTE=1        # Max chunks per note allowed in QA context
WRITEBACK_ROOT=/path/to/vault          # Directory writebacks are allowed to modify (defaults to vault)
SUMMARY_MIN_CHARS=200                  # Skip summary writeback if note is shorter than this
TAG_MIN_CHARS=120                      # Skip tagging if note is shorter than this
TAG_MAX=8                              # Maximum total tags to keep per note
RELATED_MIN_CHARS=200                  # Skip related-content if note is shorter than this
RELATED_MAX_CHARS=4000                 # Truncate note to this many chars before embedding for related-content
RELATED_TOP_K=5                        # Number of related links to append
